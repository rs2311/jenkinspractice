

{##### Applicable for Service leaf #####}
!
{% for entry in Devices[SW]['customers'] %}
{% for portchannel_entry in entry['portchannel'] %}
interface eth {{ portchannel_entry['portchannel_num'] }}.{{ portchannel_entry['portchannel_subint']['subint_num'] }}
   no switchport
   vrf forwarding {{ entry['cust_name'] }}
   ip address {{ portchannel_entry['portchannel_subint']['subnet'] | ipaddr(0) }}
   des {{ portchannel_entry['portchannel_subint']['des'] }}
   
{% endfor %}
{% endfor %}
!   
